@{
    ViewBag.Title = "Contact";
}
<h2>Contact</h2>

<address>
    <br /><strong>Phone:</strong> 111.555.0000
    <br /><strong>Email:</strong>   <a href="mailto:Missionary@example.com">Missionary@example.com</a>
</address>

<form>
    <table border="0" cellspacing="0" cellpadding="4">
        <tr>
            <td width="30%">
                <div align="right">
                    <b>Name:</b>
                </div>
            </td>
            <td width="40%">
                <input type="text" name="name" size="30">
            </td>
        <tr/>
        <tr>
            <td width="0%">
                <div align="right">
                    <b>Email:</b>
                </div>
            </td>
            <td width="40%">
                <input type="text" name="Email" size="30">
            </td>
        </tr>
        <tr>
            <td>
                <div align="right">
                    <b>Subject:</b>
                </div>
            </td>
            <td>
                <select>
                    <option value="#" selected>Advice From Former Missionaries</option>
                    <option value="#">Contacting Your Future Mission</option>
                    <option value="#">Preparing For a Mission</option>
                </select>
            </td>
        </tr>
        <tr>
            <td>
                <div align="right">
                    <b>Message:</b>
                </div>
            </td>
            <td colspan="6" style="width:100%">
                <textarea style="width:800px" name="message" cols="700" wrap="hard" rows="8"></textarea>
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td>
                <input type="submit" name="submit" value="Submit">
                <input type="reset" name="reset" value="Reset">
            </td>
        </tr>
    </table>
</form>


